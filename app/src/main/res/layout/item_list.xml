<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="200dp"
    android:background="@color/accent_material_dark">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ivAffiche"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Medium Text"
        android:id="@+id/txtTiltle"
        android:gravity="bottom|start"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_toLeftOf="@+id/btnOption"
        android:layout_toStartOf="@+id/btnOption"
        android:layout_above="@+id/txtDateRelease" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/txtDateRelease"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/txtTiltle"
        android:layout_alignLeft="@id/txtTiltle"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btnOption"
        android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:maxHeight="10dp"
        android:maxWidth="10dp"
        android:nestedScrollingEnabled="true"
        android:layout_alignBottom="@+id/txtDateRelease" />
</RelativeLayout>