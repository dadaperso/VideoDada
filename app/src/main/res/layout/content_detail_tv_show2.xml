<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dada.videstation.DetailTvShowActivity"
    android:id="@+id/glTvShow"
    android:columnCount="2"
    >





    <ImageView
        android:id="@+id/imgAfficheFiche"
        android:layout_width="140dp"
        android:layout_height="170dp"
        android:src="@drawable/poster"
        android:maxWidth="130dp"
        android:gravity="center_horizontal"
         />


    <TextView
        android:id="@+id/txtDateSortieFiche"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />



            <!-- Groupe RÃ©sumer-->
    <LinearLayout
        android:id="@+id/lltvShowSummary"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/locdvd_resumer" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtResumerFiche"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test synopsis"/>
        </ScrollView>

    </LinearLayout>




    <!-- Groupe Zod-->
    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lstTvShowZod"
        android:minHeight="500dp"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_columnSpan="2"
        android:layout_rowWeight="6">


    </ExpandableListView>

</GridLayout>


